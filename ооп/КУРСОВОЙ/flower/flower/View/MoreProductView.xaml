<Window x:Class="flower.View.MoreProductView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Edit Product" Width="500" Height="700"
        WindowStyle="None" Background="White" AllowsTransparency="True">

    <Border CornerRadius="15" Background="#f5f5f5" BorderBrush="#E0E0E0" BorderThickness="1" Padding="0">

        <DockPanel LastChildFill="True">

            <!-- Top panel with close button -->
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Height="56" VerticalAlignment="Center" Background="#7C4DFF">
                <Button Width="38" Height="38" HorizontalAlignment="Right" Style="{DynamicResource MaterialDesignIconButton}" Click="MoreCloseClick">
                    <iconPacks:PackIconMaterial Kind="Close" Foreground="White" />
                </Button>
                <TextBlock Text="{DynamicResource EditProductTitle}" VerticalAlignment="Center" FontSize="18" Foreground="White" FontWeight="Medium" Margin="10,0" />
            </StackPanel>

            <Grid Margin="20,10,20,0" Background="Transparent">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="42" />
                    <ColumnDefinition Width="110" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Product Name -->
                <iconPacks:PackIconMaterial Grid.Row="0" Grid.Column="0" Kind="ChartBox" Width="30" Height="30" Foreground="#7C4DFF" VerticalAlignment="Center" />
                <TextBlock Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" Text="Product name" FontWeight="Medium" />
                <TextBox x:Name="GetName" IsEnabled="False" Grid.Row="0" Grid.Column="2" Text="{Binding ProductName, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Style="{DynamicResource MaterialDesignOutlinedTextBox}" Margin="10,0" Height="60" />

                <!-- Product Description -->
                <iconPacks:PackIconMaterial Grid.Row="1" Grid.Column="0" Kind="Text" Width="30" Height="30" Foreground="#7C4DFF" VerticalAlignment="Center" />
                <TextBlock Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Text="Desciption" FontWeight="Medium" />
                <TextBox Name="GetDec" IsEnabled="False" Grid.Row="1" Grid.Column="2" Text="{Binding ProductDesctiprion, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Style="{DynamicResource MaterialDesignOutlinedTextBox}" Margin="10,0" Height="60" />

                <!-- Price -->
                <iconPacks:PackIconMaterial Grid.Row="2" Grid.Column="0" Kind="Cash" Width="30" Height="30" Foreground="#7C4DFF" VerticalAlignment="Center" />
                <TextBlock Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" Text="Price" FontWeight="Medium" />
                <TextBox x:Name="GetPrice" IsEnabled="False" Grid.Row="2" Grid.Column="2" Text="{Binding Price, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Style="{DynamicResource MaterialDesignOutlinedTextBox}" Margin="10,0" Height="60" />

                <!-- Stock Quantity -->
                <iconPacks:PackIconMaterial Grid.Row="3" Grid.Column="0" Kind="Numeric" Width="30" Height="30" Foreground="#7C4DFF" VerticalAlignment="Center" />
                <TextBlock Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" Text="Amount" FontWeight="Medium" />
                <TextBox x:Name="GetAmount" IsEnabled="False" Grid.Row="3" Grid.Column="2" Text="{Binding Amount, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Style="{DynamicResource MaterialDesignOutlinedTextBox}" Margin="10,0" Height="60" />

                <!-- Action Buttons -->
                <StackPanel Name="controlButtons" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,2" Visibility="Collapsed">
                    <Button Content="Save" 
                            Command="{Binding SaveCommand}" 
                            Style="{DynamicResource MaterialDesignContainedButton}" 
                            Background="#7C4DFF" Foreground="White" 
                            Width="110" Height="36" Margin="0,0,10,0" 
                            Cursor="Hand" />
                    <Button Content="Cancel" 
                            Click="MoreCloseClick" 
                            Style="{DynamicResource MaterialDesignOutlinedButton}" 
                            Width="88" Height="36" 
                            Cursor="Hand" />
                    <Button Content="Delete" 
                            Command="{Binding DeleteCommand}" 
                            Style="{DynamicResource MaterialDesignContainedButton}" 
                            Background="#FF5733" Foreground="White" 
                            Width="110" Height="36" Margin="10,0,10,0" 
                            Cursor="Hand" />
                </StackPanel>

            </Grid>
        </DockPanel>
    </Border>
</Window>