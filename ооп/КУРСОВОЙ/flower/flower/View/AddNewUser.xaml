<Window x:Class="flower.View.AddNewUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Add New User" Width="500" Height="700"
        WindowStyle="None" Background="White" AllowsTransparency="True">

    <Border CornerRadius="15" Background="#f5f5f5" BorderBrush="#E0E0E0" BorderThickness="1" Padding="0">
        <DockPanel LastChildFill="True">
            <!-- Top panel with close button -->
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Height="56" VerticalAlignment="Center" Background="#7C4DFF">
                <Button Width="38" Height="38" HorizontalAlignment="Right" Style="{DynamicResource MaterialDesignIconButton}" Click="MoreCloseClick">
                    <iconPacks:PackIconMaterial Kind="Close" Foreground="White" />
                </Button>
                <TextBlock Text="Add New User" VerticalAlignment="Center" FontSize="18" Foreground="White" FontWeight="Medium" Margin="10,0" />
            </StackPanel>

            <Grid Margin="20,10,20,0" Background="Transparent">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="42" />
                    <ColumnDefinition Width="110" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Name -->
                <iconPacks:PackIconMaterial Grid.Row="0" Grid.Column="0" Kind="Account" Width="30" Height="30" Foreground="#7C4DFF" VerticalAlignment="Center" />
                <TextBlock Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" Text="First Name" FontWeight="Medium" />
                <TextBox Grid.Row="0" Grid.Column="2" Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}" Style="{DynamicResource MaterialDesignOutlinedTextBox}" Margin="10,0" Height="60" />

                <!-- Surname -->
                <iconPacks:PackIconMaterial Grid.Row="1" Grid.Column="0" Kind="AccountOutline" Width="30" Height="30" Foreground="#7C4DFF" VerticalAlignment="Center" />
                <TextBlock Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Text="Surname" FontWeight="Medium" />
                <TextBox Grid.Row="1" Grid.Column="2" Text="{Binding UserSurename, UpdateSourceTrigger=PropertyChanged}" Style="{DynamicResource MaterialDesignOutlinedTextBox}" Margin="10,0" Height="60" />

                <!-- Email -->
                <iconPacks:PackIconMaterial Grid.Row="2" Grid.Column="0" Kind="EmailOutline" Width="30" Height="30" Foreground="#7C4DFF" VerticalAlignment="Center" />
                <TextBlock Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" Text="Email" FontWeight="Medium" />
                <TextBox Grid.Row="2" Grid.Column="2" Text="{Binding UserEmail, UpdateSourceTrigger=PropertyChanged}" Style="{DynamicResource MaterialDesignOutlinedTextBox}" Margin="10,0" Height="60" />

                <!-- Phone -->
                <iconPacks:PackIconMaterial Grid.Row="3" Grid.Column="0" Kind="Phone" Width="30" Height="30" Foreground="#7C4DFF" VerticalAlignment="Center" />
                <TextBlock Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" Text="Phone" FontWeight="Medium" />
                <TextBox Grid.Row="3" Grid.Column="2" Text="{Binding UserPhoneNumber, UpdateSourceTrigger=PropertyChanged}" Style="{DynamicResource MaterialDesignOutlinedTextBox}" Margin="10,0" Height="60" />

                <!-- Role -->
                <iconPacks:PackIconMaterial Grid.Row="4" Grid.Column="0" Kind="ShieldAccountOutline" Width="30" Height="30" Foreground="#7C4DFF" VerticalAlignment="Center" />
                <TextBlock Grid.Row="4" Grid.Column="1" VerticalAlignment="Center" Text="Password" FontWeight="Medium" />
                <TextBox IsEnabled="True" Grid.Row="4" Grid.Column="2" Text="{Binding UserPassword}" FontWeight="Medium" Height="60" Margin="10,10,0,0" />

                <!-- Action Buttons -->
                <StackPanel Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,18,0,2">
                    <Button Content="Save" 
                            Command="{Binding SaveCommand}" 
                            Style="{DynamicResource MaterialDesignContainedButton}" 
                            Background="#7C4DFF" Foreground="White"
                            Width="110" Height="36" Margin="0,0,10,0" 
                            Cursor="Hand" />
                    <Button Content="Cancel" 
                            Click="MoreCloseClick"
                            Style="{DynamicResource MaterialDesignOutlinedButton}" 
                            Width="88" Height="36" 
                            Cursor="Hand" />
                </StackPanel>

            </Grid>
        </DockPanel>
    </Border>
</Window>