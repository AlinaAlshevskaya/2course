<Window x:Class="flower.View.ReviewMoreWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:flower.View"
        mc:Ignorable="d"
        Title="{DynamicResource ReviewMore_WindowTitle}" Height="500" Width="600"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <TextBlock Text="{DynamicResource ReviewMore_WindowTitle}" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" />

        <!-- Review Details Section -->
        <StackPanel Grid.Row="1" Margin="0,0,0,20" Background="#f5f5f5">

            <TextBlock Text="{Binding Review.ReviewId}" FontWeight="Bold" FontSize="18" Foreground="#5e35b1" />
            <TextBlock Text="{Binding Review.ReviewText}" FontSize="15" Foreground="#673ab7" TextWrapping="Wrap" Margin="0,10,0,10"/>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <TextBlock Text="{DynamicResource Main_ProductRatung}" FontWeight="Bold"/>
                <TextBlock Text="{Binding Review.Rating, StringFormat='{}{0:F1}'}" Foreground="#4a148c" Margin="5,0,0,0" FontSize="14"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                <TextBlock Text="{DynamicResource ReviewMore_DateTitle}" FontWeight="Bold"/>
                <TextBlock Text="{Binding Review.CreationDate, StringFormat='{}{0:MMMM dd, yyyy}'}" Foreground="#333" Margin="5,0,0,0" FontSize="14"/>
            </StackPanel>
        </StackPanel>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="DeleteButton" Visibility="Collapsed" Content="{DynamicResource DeleteNewInfoButtonTitle}" Command="{Binding DeleteReviewCommand}"
                    Style="{DynamicResource MaterialDesignContainedButton}" 
                    Background="#7C4DFF" Foreground="White" Width="100" Margin="5"/>
            <Button Content="{DynamicResource CancelNewInfoButtonTitle}" Click="CloseButton_Click"
                    Style="{DynamicResource MaterialDesignOutlinedButton}" 
                    Width="100" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>