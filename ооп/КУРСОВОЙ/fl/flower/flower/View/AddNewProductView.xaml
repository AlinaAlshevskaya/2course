<Window x:Class="flower.View.AddNewProductView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="{DynamicResource AddProduct_WindowTitle}" Height="700" Width="500"
        WindowStyle="None" Background="White" AllowsTransparency="True">

    <Border CornerRadius="15" Background="#f5f5f5" BorderBrush="#E0E0E0" BorderThickness="1" Padding="0">

        <DockPanel LastChildFill="True">
            <!-- Top panel with close button -->
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Height="56" VerticalAlignment="Center" Background="#7C4DFF">
                <Button Width="38" Height="38" HorizontalAlignment="Right" Style="{DynamicResource MaterialDesignIconButton}" Click="MoreCloseClick">
                    <iconPacks:PackIconMaterial Kind="Close" Foreground="White" />
                </Button>
                <TextBlock Text="{DynamicResource AddProduct_WindowTitle}" VerticalAlignment="Center" FontSize="18" Foreground="White" FontWeight="Medium" Margin="10,0" />
            </StackPanel>

            <Grid Margin="20,10,20,0" Background="Transparent">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="42" />
                    <ColumnDefinition Width="110" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Product Name -->
                <iconPacks:PackIconMaterial Grid.Row="0" Grid.Column="0" Kind="PackageCheck" Width="30" Height="30" Foreground="#7C4DFF" VerticalAlignment="Center" />
                <TextBlock Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" Text="{DynamicResource ReviewMore_ProductName}" FontWeight="Medium" />
                <TextBox Grid.Row="0" Grid.Column="2" Text="{Binding ProductName, UpdateSourceTrigger=PropertyChanged}" Style="{DynamicResource MaterialDesignOutlinedTextBox}" Margin="10,0" Height="60" />

                <!-- Product Description -->
                <iconPacks:PackIconMaterial Grid.Row="1" Grid.Column="0" Kind="BarcodeScan" Width="30" Height="30" Foreground="#7C4DFF" VerticalAlignment="Center" />
                <TextBlock Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Text="{DynamicResource ReviewMore_Description}" FontWeight="Medium" />
                <TextBox Grid.Row="1" Grid.Column="2" Text="{Binding ProductDescription, UpdateSourceTrigger=PropertyChanged}" Style="{DynamicResource MaterialDesignOutlinedTextBox}" Margin="10,0" Height="60" />

                <!-- Price -->
                <iconPacks:PackIconMaterial Grid.Row="2" Grid.Column="0" Kind="CurrencyUsd" Width="30" Height="30" Foreground="#7C4DFF" VerticalAlignment="Center" />
                <TextBlock Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" Text="{DynamicResource AddProduct_Price}" FontWeight="Medium" />
                <TextBox Grid.Row="2" Grid.Column="2" Text="{Binding Price, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Style="{DynamicResource MaterialDesignOutlinedTextBox}" Margin="10,0" Height="60" />

                <!-- Amount -->
                <iconPacks:PackIconMaterial Grid.Row="3" Grid.Column="0" Kind="Numeric" Width="30" Height="30" Foreground="#7C4DFF" VerticalAlignment="Center" />
                <TextBlock Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" Text="{DynamicResource AddProduct_Amount}" FontWeight="Medium" />
                <TextBox Grid.Row="3" Grid.Column="2" Text="{Binding Amount, UpdateSourceTrigger=PropertyChanged}" Style="{DynamicResource MaterialDesignOutlinedTextBox}" Margin="10,0" Height="60" />

               
                <iconPacks:PackIconMaterial Grid.Row="6" Grid.Column="0" Kind="PictureInPictureTopRight" Width="30" Height="30" Foreground="#7C4DFF" VerticalAlignment="Center" />
                <TextBlock Grid.Row="6" Grid.Column="1" VerticalAlignment="Center" Text="{DynamicResource AddProduct_PhotoPath}" FontWeight="Medium" />
                <TextBox Grid.Row="6" Grid.Column="2"  Text="{Binding PhotoPath, UpdateSourceTrigger=PropertyChanged}" Width="Auto" Margin="10,0" Height="60" />



                <!-- Action Buttons -->
                <StackPanel Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,18,0,2">
                    <Button Content="{DynamicResource SaveNewInfoButtonTitle}" 
                            Command="{Binding SaveProductCommand}" 
                            Style="{DynamicResource MaterialDesignContainedButton}" 
                            Background="#7C4DFF" Foreground="White"
                            Width="110" Height="36" Margin="0,0,10,0" 
                            Cursor="Hand" />
                    <Button Content="{DynamicResource CancelNewInfoButtonTitle}" 
                            Click="MoreCloseClick"
                            Style="{DynamicResource MaterialDesignOutlinedButton}" 
                            Width="88" Height="36" 
                            Cursor="Hand" />
                </StackPanel>

            </Grid>

        </DockPanel>

    </Border>

</Window>