<Window x:Class="SoftwareShop.Views.MoreView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Информация о товаре" Height="450" Width="400"
        ResizeMode="NoResize"
                    Background="{DynamicResource WindowBackgroundBrush}"
            Foreground="{DynamicResource PrimaryTextBrush}"
        WindowStartupLocation="CenterOwner"
        WindowStyle="SingleBorderWindow"
        >

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Image Source="{Binding ImagePath}" Height="150" Stretch="UniformToFill" Grid.Row="0" Margin="0,0,0,10" />

        <TextBlock Text="{Binding Name}" FontSize="20" FontWeight="Bold" Grid.Row="1" Margin="0,0,0,10" />

        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <TextBlock Text="{Binding Description}" TextWrapping="Wrap" FontSize="14"/>
        </ScrollViewer>

        <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Right" Margin="0,10,0,0" >
            <TextBlock Text="{DynamicResource ProductsPriceText}" FontWeight="SemiBold" FontSize="16" Foreground="#2196F3" VerticalAlignment="Center"/>
            <TextBlock Text=": " FontSize="16" FontWeight="SemiBold" Foreground="#2196F3" VerticalAlignment="Center" />
            <TextBlock Text="{Binding Price}" FontWeight="SemiBold" FontSize="16" Foreground="#2196F3" VerticalAlignment="Center"/>
            <TextBlock Text="{DynamicResource ProductsCurrencySign}" FontWeight="SemiBold" FontSize="16" Foreground="#2196F3" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>

</Window>
