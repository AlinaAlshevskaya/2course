<UserControl x:Class="SoftwareShop.Views.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SoftwareShop.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <!-- Сторибоард включения -->
        <Storyboard x:Key="SwitchOn">
            <DoubleAnimation Storyboard.TargetName="KnobTransform"
                       Storyboard.TargetProperty="X"
                       To="10" Duration="0:0:0.2"/>
            <ColorAnimation Storyboard.TargetName="BorderBg"
                      Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                      To="Green" Duration="0:0:0.2"/>
        </Storyboard>
        <!-- Сторибоард выключения -->
        <Storyboard x:Key="SwitchOff">
            <DoubleAnimation Storyboard.TargetName="KnobTransform"
                       Storyboard.TargetProperty="X"
                       To="-10" Duration="0:0:0.2"/>
            <ColorAnimation Storyboard.TargetName="BorderBg"
                      Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                      To="Gray" Duration="0:0:0.2"/>
        </Storyboard>
    </UserControl.Resources>

    <Grid MouseLeftButtonDown="OnToggle">
        <!-- Фон -->
        <Border x:Name="BorderBg"
            CornerRadius="15"
            Background="Gray"/>
        <!-- Ползунок -->
        <Ellipse Width="26" Height="26" Fill="White" Margin="2">
            <Ellipse.RenderTransform>
                <TranslateTransform x:Name="KnobTransform" X="-10"/>
            </Ellipse.RenderTransform>
        </Ellipse>
    </Grid>
</UserControl>
