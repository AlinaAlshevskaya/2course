<!-- Themes/Generic.xaml -->
<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:sys="clr-namespace:System;assembly=mscorlib"
  xmlns:ctrl="clr-namespace:SoftwareShop.Views">
    <sys:String x:Key="Conn">Data Source=DESKTOP-T12FKAO\SQLEXPRESS;Initial Catalog=SoftDB;Integrated Security=True;TrustServerCertificate=True;</sys:String>
	<!-- 1st control template -->
	<Style TargetType="{x:Type ctrl:MyFirstControl}">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type ctrl:MyFirstControl}">
					<Border x:Name="PART_Border" Background="LightBlue" Padding="5">
						<TextBlock Text="{TemplateBinding IntValue}"
								   HorizontalAlignment="Center"
								   VerticalAlignment="Center"/>
					</Border>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<!-- 2nd control template -->
	<Style TargetType="{x:Type ctrl:MySecondControl}">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type ctrl:MySecondControl}">
					<Border x:Name="PART_Border" Background="LightCoral" Padding="5">
						<TextBlock Text="{TemplateBinding Text}"
								   HorizontalAlignment="Center"
								   VerticalAlignment="Center"/>
					</Border>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

</ResourceDictionary>
