<Window x:Class="lab45.AddNewProduct"
         xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab45"
        mc:Ignorable="d"
        Title="AddNewProduct" Height="600" Width="450">
    
        <Grid Background="Lavender" >

            <Border MinWidth="400" MinHeight="500" Margin="20" Padding="30" Background="White" VerticalAlignment="Center" CornerRadius="15">
            <StackPanel>
                <TextBlock Text="Photo"></TextBlock>
                <Button Height="100" Width="150">
                    <materialDesign:PackIcon Kind="Plus" Height="100" Width=" 100"></materialDesign:PackIcon>
                </Button>
                <TextBox materialDesign:HintAssist.Hint="Путь фотографии"></TextBox>
            <TextBlock Text="Название"></TextBlock>
            <TextBox></TextBox>
            <TextBlock Text="Описание"></TextBlock>
            <RichTextBox></RichTextBox>
                <TextBlock Text="Категория"></TextBlock>
                <ListBox Style="{DynamicResource MaterialDesignChoiceChipListBox}" BorderBrush="BlueViolet" BorderThickness="1" Height="20"></ListBox>

            </StackPanel>
        </Border>
            


        </Grid>
        

</Window>
